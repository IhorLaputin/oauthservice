<div id="custom-toolbar" style="text-align:left;margin-bottom: 10px;">
	<button type="button" name='back' class="btn btn-sm btn-info">Back to List</button>
</div>

<div style="background-color: rgb(245,245,245);padding: 20px;">

	<form id='editForm'>
	  
	  <div class="form-group row">
		<label class="col-sm-2 control-label">Id</label>
		<div class="col-sm-10">
		  <input type="text" readonly class="form-control" name="_id" value="">
	    </div>
	  </div>
	  
		<div class="form-group row">
			<label class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10"><input type="text" class="form-control" name="name" value="" required></div>
		</div> 	
		<div class="form-group row">
			<label class="col-sm-2 control-label">Email</label>
			<div class="col-sm-10"><input type="text" class="form-control" name="email" value="" required></div>
		</div> 	
		<div class="form-group row">
			<label class="col-sm-2 control-label">Password</label>
			<div class="col-sm-10"><input type="text" class="form-control" name="password" value="" required></div>
		</div> 	
	
		<div class="form-group row justify-content-sm-end"><div class='col-sm-10'>
			<div class="card form-group">
				<div class="card-header">
					<h6 class="card-title">TracSENSE - Settings</h6>
				</div>
				<div class="card-body">
					<div class="form-group row">
						<label class="col-sm-2 control-label">Access</label>
						<div class="col-sm-10">
						  <div class="btn-group btn-group-toggle" data-toggle="buttons">
							<label class="btn btn-secondary">
							  <input type="radio" name="tracsense_access" value="on" style=''> Yes
							</label>
							<label class="btn btn-secondary">
							  <input type="radio" name="tracsense_access" value="off" style=''> No
							</label>
						  </div>
						</div>
					</div> 			
				</div>
			</div>
		</div></div>
	
		<div class="form-group row justify-content-sm-end"><div class='col-sm-10'>
			<div class="card form-group">
				<div class="card-header">
					<h6 class="card-title">AVL - Settings</h6>
				</div>
				<div class="card-body">
					<div class="form-group row">
						<label class="col-sm-2 control-label">Access</label>
						<div class="col-sm-10">
						  <div class="btn-group btn-group-toggle" data-toggle="buttons">
							<label class="btn btn-secondary">
							  <input type="radio" name="avl_access" value="on" style=''> Yes
							</label>
							<label class="btn btn-secondary">
							  <input type="radio" name="avl_access" value="off" style=''> No
							</label>
						  </div>
						</div>
					</div> 			
					<div class="form-group row">
						<label class="col-sm-2 control-label">Modules</label>
						<div class="col-sm-10">
							<div class="btn-group-vertical btn-group-toggle" data-toggle="buttons">
							  <label class="btn btn-secondary"><input type="checkbox" name="avl_module" value="map"> Map</label>
							  <label class="btn btn-secondary"><input type="checkbox" name="avl_module" value="reports"> Reports</label>
							  <label class="btn btn-secondary"><input type="checkbox" name="avl_module" value="assets"> Assets</label>
							  <label class="btn btn-secondary"><input type="checkbox" name="avl_module" value="maintenance"> Maintenance</label>
							</div>						
						</div>
					</div> 
				</div>
			</div>
		</div></div>
	
	
	</form>
	  
	  <div class="row">
		<div class="col-sm-offset-2 col-sm-10">
		  <p class="bg-success" id='ajax-msg'></p>
		  <button name="save" type="save" class="btn btn-primary">Save</button>
		  <button name="delete" type="delete" class="btn btn-danger">Delete</button>
		</div>
	  </div>
	  
</div>	  

<script>
	var item = <%- item %>;
	app.initForm();
</script>